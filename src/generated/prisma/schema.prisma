generator client {
  provider     = "prisma-client-js"
  output       = "../src/generated/prisma"
  relationMode = "prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid()) // Unique user ID
  fullname  String
  email     String
  password  String
  birthdate String // Stored in YYYYMMDD format
  sex       String // "male", "female", or "unknown"
  phone     String

  jobTitle       String @default("---")
  jobType        String @default("---")
  jobDescription String @default("---") @db.Text

  createdAt DateTime @default(now()) // ISO 8601 timestamp
}

